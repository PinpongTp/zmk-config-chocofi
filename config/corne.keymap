    // 3
    symbol_layer {

    /*                KEY POSITIONS
      ╭────────────────────╮ ╭────────────────────╮
      │  !   @  "#"  $   % │ │  ^   &   [   ]   " │
      │  §   +   -   =     │ │      _   (   )   ' │
      │      *   /   \     │ │  ±   |   {   }     │
      ╰───────────╮        │ │        ╭───────────╯
